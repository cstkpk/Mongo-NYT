<div id="wrapper">
    <div id="articles">
        {{#each dbArticle}}
            {{!-- <p>{{this.title}}</p> --}}
            <div class="row">
                <div class="col s12">
                    <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                        <span class="card-title">{{this.title}}</span>
                        <p>{{this.summary}}</p><br>
                        <a id={{this._id}} class="waves-effect waves-light btn save-btn">Save</a>
                        <a id={{this._id}} class="waves-effect waves-light btn note-btn">Add Note</a>
                        </div>
                        <div class="card-action">
                        <a href="https://www.nytimes.com{{this.link}}">Take me to the article</a>
                        </div>
                    </div>
                    <div id="notes"></div>
                </div>
            </div>
            {{!-- <a href="https://www.nytimes.com{{this.link}}">{{this.title}}</a> --}}
            <br><br>
        {{/each}}
    </div>
</div>